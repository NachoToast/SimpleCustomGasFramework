<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <!-- 
        Name: [1.5] Great War - German Uniforms
        URL: https://steamcommunity.com/sharedfiles/filedetails/?id=2581651314
        Last Checked: 22nd March 2025
        Last Reviewed: 23rd July 2023

        Mainly just gas masks and helmet variants, values are grouped by variant.
    -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Great War - German Uniforms</li>
        </mods>

        <match Class="PatchOperationAdd">
            <xpath>Defs/SCGF.ApparelTierDef[defName="FaceCoveringThick"]/apparel</xpath>
            <value>
                <!-- M1916 Stahlhelm -->
                <li>ODZ_WWI_M1916StahlhelmGasmask</li>
                <li>ODZ_WWI_M1916StahlhelmCamoGasmask</li>
                <li>ODZ_WWI_M1916StahlhelmPlateGasmask</li>

                <!-- Imperial Feldmutze -->
                <li>ODZ_WWI_ImperialFeldmutzeGasmask</li>

                <!-- M17 -->
                <li>ODZ_WWI_M17Gasmask</li>

                <!-- Officer Feldmutze -->
                <li>ODZ_WWI_ImperialOfficerFeldmutzeGasmask</li>

                <!-- Pickelhaube -->
                <li>ODZ_WWI_PickelhaubeGasmask</li>
                <li>ODZ_WWI_PickelhaubeCoveredGasmask</li>
            </value>
        </match>
    </Operation>

</Patch>