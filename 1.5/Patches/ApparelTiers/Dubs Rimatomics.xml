<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <!--
        Name: Dubs Rimatomics
        URL: https://steamcommunity.com/sharedfiles/filedetails/?id=1127530465
        Last Checked: 22nd March 2025
        Last Reviewed: 22nd March 2025

        Radiation and MOPP suits.
        Although the suits are cloth based, they are counted as 'thick' since
        they are designed specifically to counter contamination.
    -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Dubs Rimatomics</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/SCGF.ApparelTierDef[defName="HeadCoveringThick"]/apparel</xpath>
                    <value>
                        <li>Apparel_RadiationMask</li>
                        <li>Apparel_MoppMaskDesert</li>
                        <li>Apparel_MoppMaskWoodland</li>
                        <li>Apparel_MoppMaskSnow</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/SCGF.ApparelTierDef[defName="FullBodyCoveringThick"]/apparel</xpath>
                    <value>
                        <li>Apparel_RadiationSuit</li>
                        <li>Apparel_MoppSuitDesert</li>
                        <li>Apparel_MoppSuitWoodland</li>
                        <li>Apparel_MoppSuitSnow</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>