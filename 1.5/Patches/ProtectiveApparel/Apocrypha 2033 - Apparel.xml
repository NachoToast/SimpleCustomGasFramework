<?xml version="1.0" encoding="utf-8"?>

<Patch>

    <!-- 
        Name: Apocrypha 2033 - Apparel
        URL: https://steamcommunity.com/sharedfiles/filedetails/?id=2970206222
        Last Checked: 23rd March 2025
        Last Reviewed: 23rd July 2023

        5 Gasmasks and a helmet.
    -->

    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Apocrypha 2033 - Apparel</li>
            <li>Apocrypha 2033 - Apparel(Continued)</li>
        </mods>

        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/SCGF.ProtectiveApparelDef[defName="Face"]/apparel</xpath>
                    <value>
                        <li>ODZ_METRO2033_GP5Gasmask</li>
                        <li>ODZ_METRO2033_PBFGasmask</li>
                        <li>ODZ_METRO2033_PMGGasmask</li>
                        <li>ODZ_METRO2033_PMK2Gasmask</li>
                        <li>ODZ_METRO2033_PPM88Gasmask</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/SCGF.ProtectiveApparelDef[defName="Head"]/apparel</xpath>
                    <value>
                        <li>ODZ_METRO2033_ApocalypseHelmet</li>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>

</Patch>