        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationAdd">
                    <xpath>Defs/SCGF.ProtectiveApparelDef[defName="Head"]/apparel</xpath>
                    <value>
                        <li>GW_AM_LuciferBlackSkull</li>
                        <li>GW_AM_LuciferBlackAlt</li>
                        <li>GW_AM_Elysian_Helmet</li>
                        <li>GW_AM_VostoyanFirstbornHeadgear</li>
