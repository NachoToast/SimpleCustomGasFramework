                    <xpath>Defs/SCGF.ProtectiveApparelDef[defName="Mouth"]/apparel</xpath>
                    <value>
                        <li>GW_AM_LuciferBlackMask</li>
                        <li>GW_AM_ElysianHelmetOpen</li>
                    </value>
                </li>

                <li Class="PatchOperationAdd">
                    <xpath>Defs/SCGF.ProtectiveApparelDef[defName="Body"]/apparel</xpath>
